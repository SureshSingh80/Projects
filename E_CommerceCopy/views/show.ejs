<% layout("/layouts/biolerplate") %>
<body>
    <div class="row mt-3">
   
        <div class="col col-8 offset-3">
            <h3>Product details:</h3>
        </div>
        <div class="card  col-7 offset-3">
                <img src=<%=item.image %>  alt="listing image" class=show-img>
                <ul class="card-text">
                <li> <b><%=item.title%> </b></li>
                <li><%=item.description%></li>
                <li>&#8377;<%=item.price.toLocaleString("en-IN") %></li>
                  <li>  <%=item.specification%></li>
                    
                 
                </ul>
        </div>
    
    </div>
    <div class="row mt-3">
    <div class="col  col-8 offset-3">
        <a href="/homepage/signup" class="btn btn-success" style="width:88%">Buy Now</a>
    </div>
    </div>
</body>